        "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },
    "custom/menu": {
        "format": "‚â°",
        "tooltip-format": "Menu"
    },
    "custom/start": {
        "format": "ÔåÉ",

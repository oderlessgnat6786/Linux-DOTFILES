        "on-click": "bash ~/.config/waybar/scripts/StartButtonToggle.sh"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "tooltip-format":"View & Change workspaces",
        "on-click": "activate",
        "sort-by-number": true,
        "persistent-workspaces": {
            "*": 5
        }
    },
    "custom/terminal": {
        "format":"ÔÑ† ",
        "on-click":"hyprctl dispatch exec kitty",

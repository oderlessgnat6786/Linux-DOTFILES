{
    "position": "top",
    "layer": "top",
    "margin-top": 3,
    "width": 1900,
    "margin-bottom": 5,
    "modules-left": [
        "custom/start",
        "wlr/taskbar"
    ],
    "modules-center": [
        "custom/kill",
        "hyprland/workspaces",
        "custom/terminal"
    ],
    "modules-right": [
        "network",
        "pulseaudio",
        "clock",
        "custom/menu"
    ],
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "persistent_apps": {
            "firefox": "Ôâ©",
            "code": "Û∞®û",
            "kitty": "ÔÑ†"
        },
        "on-click": "activate"
    },

    "hyprland/window": {
        "max-length": 50
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-muted": "Ôë¶ ",
        "format-icons": {
            "default": [
                "ÔÄ¶ ",
                "ÔÄß ",
                "ÔÄ®  "
            ]
        },
        "on-click": "pavucontrol"
    },
    "clock": {
        "format": "{:%a %d %I:%M %p}",
        "tooltip-format": "<big>{:%d %b %Y}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "network": {
        "format": "{icon}",
        "format-wifi": "Ôá´ ",
        "format-ethernet": "ÔÉÅ ",

@import "shared/base.rasi"
@import "shared/fonts.rasi"
@import ".config/rofi/colors/oneHAKI.rasi"

/***** Emoji picker overrides *****/

configuration {
    show-icons: true;
    emoji-type-command: "wtype";
    emoji-copy-command: "";
}
/*Definitely not vibe coded using chatGPT but made necessary changes so it is not vibe coding*/
/* Disable alternate row styling */

element alternate.normal,
element alternate.urgent,
element alternate.active {
    background-color: transparent;
    text-color: @foreground;
}

/* Make rows denser (emoji lists are long) */
element {
    padding: 10px -20px;
    
}
element-text {
    horizontal-align: 0.0;
    vertical-align: 0.5;
}
entry {
    placeholder: "Search emoji...";
}

* {
    font: "JetBrains Mono Nerd Font 13";
}

listview {
    fixed-height: false;
}

window {
    width: 1300px;
}

/* Emoji picker usually doesn't need mode switcher */
mode-switcher {
    enabled: false;
}
